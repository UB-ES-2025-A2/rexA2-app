# ===============================
# Environment configuration
# Archivo de ejemplo (.env.example)
# Copia este archivo como .env y reemplaza los valores con los tuyos reales.
# ===============================

# URL de conexión a tu cluster de MongoDB Atlas.
# Sustituye <usuario>, <contraseña> y <cluster> cuando tengas tu base creada.
MONGODB_URI=mongodb+srv://<usuario>:<contraseña>@<cluster>.mongodb.net/rex

# Nombre de la base de datos dentro del cluster.
DATABASE_NAME=rex

# Clave secreta usada para firmar los JWT.
# Usa una clave fuerte generada con:
#   python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CAMBIA_ESTE_SECRETO

# Algoritmo usado para firmar los JWT (no cambiar salvo que sepas lo que haces).
ALGORITHM=HS256

# Duración del token de acceso (en minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Duración del token de refresh (en días)
REFRESH_TOKEN_EXPIRE_DAYS=7

# URLs de frontends que pueden conectarse a tu API (CORS)
# Si usas Vite o React en local, mantenlas así.
CORS_ORIGINS= ["http://localhost:5173","http://localhost:3000"]
